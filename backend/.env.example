# Database
# For local development (without Docker):
DATABASE_URL=postgresql://psyprotocol:password@localhost:5432/psyprotocol
# For Docker development (uncomment when using Docker Compose):
# DATABASE_URL=postgresql://psyprotocol:psyprotocol_dev_password@postgres:5432/psyprotocol

# Redis
# For local development (without Docker):
REDIS_URL=redis://localhost:6379/0
# For Docker development (uncomment when using Docker Compose):
# REDIS_URL=redis://redis:6379/0

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here

# Environment
ENVIRONMENT=development
DEBUG=true
